<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer"
        tools:context=".acrivites.MapActivity">


        <org.neshan.mapsdk.MapView
            android:id="@+id/mapNeshan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSearchMap"
            android:layout_width="0dp"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/border_white"
            android:paddingTop="?attr/actionBarSize"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/constSearchOnMap"
            app:layout_constraintStart_toStartOf="@+id/constSearchOnMap"
            app:layout_constraintTop_toTopOf="@+id/constSearchOnMap" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constSearchOnMap"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/border_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".9"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSearchOnMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/transparent"
                android:drawableEnd="@drawable/ic_search"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/estedad_regular"
                android:hint="@string/hintSearchAddress"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:overScrollMode="never"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:selectAllOnFocus="true"
                android:textDirection="rtl"
                android:textSize="@dimen/_12ssp"
                android:theme="@style/inputEditText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:fabSize="mini"
                android:backgroundTint="@color/grey6"
                app:rippleColor="@color/white"
                android:scaleType="center"
                app:backgroundTint="@color/transparent"
                android:onClick="focusOnUserLocation"
                android:src="@drawable/ic_current_location"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardElevation="8dp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/theme_preview"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:onClick="changeStyle"/>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddLocMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/textDes"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            app:rippleColor="@color/orange2"
            android:text="@string/accept"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>