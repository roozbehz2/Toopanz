<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".acrivites.AddOrEditSalonActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorADSalon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnSaveInfoADSalon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarADSalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbarADSalon"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    android:layoutDirection="rtl"
                    android:theme="@style/AppTheme.AppBarOverlay"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:navigationIcon="@drawable/ic_arrow_right"
                    app:title="@string/addOrEditSalon"
                    app:titleTextColor="@color/blackToopan" />

            </com.google.android.material.appbar.AppBarLayout>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedADSalon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarEditProfile">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfileADSalon"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgProfileADSalon"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/imgChangeProfileADSalon"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/circle_blue"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_edit_white"
                        app:layout_constraintBottom_toBottomOf="@id/cvProfileADSalon"
                        app:layout_constraintEnd_toEndOf="@id/cvProfileADSalon"
                        app:layout_constraintStart_toStartOf="@id/cvProfileADSalon"
                        app:layout_constraintTop_toBottomOf="@id/cvProfileADSalon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutNameSalonADSalon"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:hint="@string/nameSalon"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cvProfileADSalon"
                        app:layout_constraintWidth_percent=".9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNameSalonADSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/estedad_regular"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:overScrollMode="never"
                            android:selectAllOnFocus="true"
                            android:textDirection="rtl"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutTypeInterfaceSalon"
                        style="@style/Widget.AppTheme.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/TypeInterfaceSalon"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutNameSalonADSalon"
                        app:layout_constraintWidth_percent=".9">


                        <AutoCompleteTextView
                            android:id="@+id/autoTextTypeInterfaceSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:fontFamily="@font/estedad_regular"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/grey3"
                            android:textDirection="rtl" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutTypeOwnershipSalon"
                        style="@style/Widget.AppTheme.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/TypeOwnershipSalon"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutTypeInterfaceSalon"
                        app:layout_constraintWidth_percent=".9">

                        <AutoCompleteTextView
                            android:id="@+id/autoTextTypeOwnershipSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:fontFamily="@font/estedad_regular"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/grey3"
                            android:textDirection="rtl" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerSexADSalon"
                        style="@style/Widget.AppTheme.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/sex"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutTypeOwnershipSalon"
                        app:layout_constraintWidth_percent=".9">

                        <AutoCompleteTextView
                            android:id="@+id/autoTextGenderSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:fontFamily="@font/estedad_regular"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/grey3"
                            android:textDirection="rtl" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:id="@+id/line1ADSalon"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/blueGrey3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/spinnerSexADSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <TextView
                        android:id="@+id/txtAddressSalon"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="@string/addressSalon"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="@dimen/_14ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="@id/line1ADSalon"
                        app:layout_constraintStart_toEndOf="@id/txtSelectOnMap"
                        app:layout_constraintTop_toBottomOf="@+id/line1ADSalon" />

                    <TextView
                        android:id="@+id/txtSelectOnMap"
                        style="@style/textDes"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|end"
                        android:text="@string/selectOnMap"
                        android:textColor="@color/blue"
                        app:autoSizeMaxTextSize="@dimen/_12ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toStartOf="@id/txtAddressSalon"
                        app:layout_constraintStart_toStartOf="@id/line1ADSalon"
                        app:layout_constraintTop_toBottomOf="@+id/line1ADSalon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerStateADSalon"
                        style="@style/Widget.AppTheme.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/State"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="@id/txtInputLayoutTypeOwnershipSalon"
                        app:layout_constraintStart_toEndOf="@id/spinnerCityADSalon"
                        app:layout_constraintTop_toBottomOf="@id/txtAddressSalon">

                        <AutoCompleteTextView
                            android:id="@+id/autoTextStateSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:fontFamily="@font/estedad_regular"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/grey3"
                            android:textDirection="rtl" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerCityADSalon"
                        style="@style/Widget.AppTheme.AutoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:hint="@string/city"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toStartOf="@id/spinnerStateADSalon"
                        app:layout_constraintStart_toStartOf="@id/spinnerSexADSalon"
                        app:layout_constraintTop_toBottomOf="@id/txtAddressSalon">

                        <AutoCompleteTextView
                            android:id="@+id/autoTextCitySalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:fontFamily="@font/estedad_regular"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/grey3"
                            android:textDirection="rtl" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/checkboxSalon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="@string/noSalonInMyCity"
                        android:fontFamily="@font/estedad_regular"
                        android:textColor="@color/grey1"
                        app:autoSizeMaxTextSize="@dimen/_10ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="@id/spinnerSexADSalon"
                        app:layout_constraintStart_toStartOf="@id/spinnerSexADSalon"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerCityADSalon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutAddressADSalon"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/exactAddress"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent=".1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/checkboxSalon"
                        app:layout_constraintWidth_percent=".9">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAddressADSalon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/estedad_regular"
                            android:gravity="top"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:overScrollMode="never"
                            android:selectAllOnFocus="true"
                            android:textDirection="rtl"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:id="@+id/viewTxtInputLayoutAddressADSalon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtInputLayoutAddressADSalon"
                        app:layout_constraintStart_toStartOf="@+id/txtInputLayoutAddressADSalon"
                        app:layout_constraintEnd_toEndOf="@+id/txtInputLayoutAddressADSalon"
                        app:layout_constraintTop_toTopOf="@+id/txtInputLayoutAddressADSalon"/>


                    <View
                        android:id="@+id/line2ADSalon"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/blueGrey3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutAddressADSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <TextView
                        android:id="@+id/txtPossibilitiesSalon"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="@string/PossibilitiesSalon"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="@dimen/_14ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="@id/line2ADSalon"
                        app:layout_constraintStart_toStartOf="@+id/line2ADSalon"
                        app:layout_constraintTop_toBottomOf="@+id/line2ADSalon" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPossibilitiesSalon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        app:layout_constraintHeight="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="@id/txtPossibilitiesSalon"
                        app:layout_constraintStart_toStartOf="@id/txtPossibilitiesSalon"
                        app:layout_constraintTop_toBottomOf="@id/txtPossibilitiesSalon" />


                    <View
                        android:id="@+id/line3ADSalon"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/blueGrey3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recyclerPossibilitiesSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <TextView
                        android:id="@+id/txtTamingSalon"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="@string/timing"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="@dimen/_14ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="@id/line3ADSalon"
                        app:layout_constraintStart_toStartOf="@+id/line3ADSalon"
                        app:layout_constraintTop_toBottomOf="@+id/line3ADSalon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutGetTimeStartEndADSalon"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="@string/timingStartEnd"
                        android:textColorHint="@color/grey2"
                        app:errorEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTamingSalon"
                        app:layout_constraintWidth_percent=".9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGetTimeStartEndADSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/estedad_regular"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:overScrollMode="never"
                            android:paddingStart="@dimen/_32sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:selectAllOnFocus="true"
                            android:textDirection="rtl"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:id="@+id/viewTxtInputLayoutGetTimeStartEndADSalon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintBottom_toBottomOf="@+id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintStart_toStartOf="@+id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintEnd_toEndOf="@+id/txtInputLayoutGetTimeStartEndADSalon"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@null"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="@id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintStart_toStartOf="@id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintTop_toTopOf="@id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintWidth_percent=".06"
                        app:srcCompat="@drawable/ic_time_circle" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutGetTimeOneSessionADSalon"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:errorEnabled="true"
                        android:hint="@string/durationOfEachSession"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutGetTimeStartEndADSalon"
                        app:layout_constraintWidth_percent=".9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGetTimeOneSessionADSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/estedad_regular"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:overScrollMode="never"
                            android:paddingStart="@dimen/_32sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:selectAllOnFocus="true"
                            android:textDirection="rtl"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@null"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="@id/txtInputLayoutGetTimeOneSessionADSalon"
                        app:layout_constraintStart_toStartOf="@id/txtInputLayoutGetTimeOneSessionADSalon"
                        app:layout_constraintTop_toTopOf="@id/txtInputLayoutGetTimeOneSessionADSalon"
                        app:layout_constraintWidth_percent=".06"
                        app:srcCompat="@drawable/ic_time_circle" />


                    <View
                        android:id="@+id/line4ADSalon"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/blueGrey3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtInputLayoutGetTimeOneSessionADSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <TextView
                        android:id="@+id/txtPriceSessionSalon"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="@string/PriceSession"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="@dimen/_14ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="@id/line4ADSalon"
                        app:layout_constraintStart_toStartOf="@+id/line4ADSalon"
                        app:layout_constraintTop_toBottomOf="@+id/line4ADSalon" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLayoutPriceSessionADSalon"
                        style="@style/Widget.AppTheme.TextInputLayoutList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:errorEnabled="true"
                        android:hint="@string/PriceSessionOfToman"
                        android:textColorHint="@color/grey2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtPriceSessionSalon"
                        app:layout_constraintWidth_percent=".9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPriceSessionADSalon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/estedad_regular"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:overScrollMode="never"
                            android:selectAllOnFocus="true"
                            android:textDirection="rtl"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtDesADSalon"
                        style="@style/textDes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="start"
                        android:text="@string/DesADSalon"
                        android:textColor="@color/grey1"
                        app:autoSizeMaxTextSize="@dimen/_10ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutPriceSessionADSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <View
                        android:id="@+id/line5ADSalon"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/blueGrey3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtDesADSalon"
                        app:layout_constraintWidth_percent=".9" />


                    <TextView
                        android:id="@+id/txtUploadImageADSalon"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="@string/uploadImageAsSalon"
                        android:textColor="@color/black"
