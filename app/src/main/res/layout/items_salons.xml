<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constParentItemSalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_grey_back_white"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImgSalon"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgSalon"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_clubs" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imgDotsItemSalon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_dots"
                app:layout_constraintBottom_toBottomOf="@id/txtNameSalon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".05" />

            <TextView
                android:id="@+id/txtNameSalon"
                style="@style/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:maxLines="2"
                android:letterSpacing="0.14"
                android:textAlignment="textEnd"
                android:text="ssseeed"
                android:textStyle="bold"
                android:textColor="@color/blackToopan"
                app:autoSizeMaxTextSize="@dimen/_14ssp"
                app:autoSizeMinTextSize="@dimen/_3ssp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@id/cvImgSalon"
                app:layout_constraintTop_toTopOf="@id/cvImgSalon" />

            <TextView
                android:id="@+id/txtAddressSalon"
                style="@style/textDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:gravity="top|start"
                android:letterSpacing="0"
                android:maxLines="3"
                android:text="@string/desNoSalonExist"
                android:textColor="@color/grey1"
                app:autoSizeMaxTextSize="@dimen/_12ssp"
                app:autoSizeMinTextSize="@dimen/_3ssp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@id/cvImgSalon"
                app:layout_constraintEnd_toStartOf="@id/cvImgSalon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNameSalon"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/line1ItemSalon"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/blueGrey"
                app:layout_constraintBottom_toTopOf="@+id/txtTitlePriceSalon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvImgSalon" />

            <TextView
                android:id="@+id/txtTitlePriceSalon"
                style="@style/textDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="start|center"
                android:lines="1"
                android:text="@string/titlePriceSince"
                android:textColor="@color/grey2"
                app:autoSizeMaxTextSize="@dimen/_12ssp"
                app:autoSizeMinTextSize="@dimen/_3ssp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/constAboutSinceSalon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constAboutSinceSalon" />

            <TextView
                android:id="@+id/txtPriceSalonSince"
                style="@style/textDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:lines="1"
                android:text="60000"
                android:textColor="@color/grey1"
                app:autoSizeMaxTextSize="@dimen/_12ssp"
                app:autoSizeMinTextSize="@dimen/_3ssp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/constAboutSinceSalon"
                app:layout_constraintEnd_toStartOf="@id/txtTitlePriceSalon"
                app:layout_constraintStart_toEndOf="@id/constAboutSinceSalon"
                app:layout_constraintTop_toTopOf="@+id/constAboutSinceSalon" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constAboutSinceSalon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtPriceSalonSince"
                app:layout_constraintHeight_percent=".3"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1ItemSalon">


                <TextView
                    android:id="@+id/txtAboutSince"
                    style="@style/textDes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:gravity="end|center"
                    android:lines="1"
                    android:text="@string/aboutSince"
                    android:textColor="@color/grey2"
                    app:autoSizeMaxTextSize="@dimen/_12ssp"
                    app:autoSizeMinTextSize="@dimen/_3ssp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtProcessSince"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txtProcessSince"
                    style="@style/textDes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:lines="1"
                    android:text="@string/inProcess"
                    android:textColor="@color/blue"
                    app:autoSizeMaxTextSize="@dimen/_12ssp"
                    app:autoSizeMinTextSize="@dimen/_3ssp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constManageSinceSalon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/constAboutSinceSalon"
                app:layout_constraintEnd_toEndOf="@id/constAboutSinceSalon"
                app:layout_constraintStart_toStartOf="@id/constAboutSinceSalon"
                app:layout_constraintTop_toTopOf="@id/constAboutSinceSalon">


                <TextView
                    android:id="@+id/txtEditProfile"
                    style="@style/textDes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:lines="1"
                    android:text="@string/manageSince"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="@dimen/_14ssp"
                    app:autoSizeMinTextSize="@dimen/_3ssp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgEditArrowProfile"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_left_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtEditProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewGrey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@drawable/border_grey_back_gery"
            app:layout_constraintStart_toStartOf="@id/constParentItemSalon"
            app:layout_constraintTop_toTopOf="@id/constParentItemSalon"
            app:layout_constraintBottom_toBottomOf="@id/constParentItemSalon"
            app:layout_constraintEnd_toEndOf="@id/constParentItemSalon"/>

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_margin="@dimen/_10sdp"-->
<!--            android:background="@drawable/border_grey_back_white"-->
<!--            app:layout_constraintWidth_percent=".5"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="@+id/imgDotsFake"-->
<!--            app:layout_constraintTop_toTopOf="@+id/imgDotsFake">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constPopup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/border_grey_back_white"
                app:layout_constraintWidth_percent=".5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imgDotsFake"
                app:layout_constraintTop_toTopOf="@+id/imgDotsFake">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constCreateJam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/constDetailsAndEdit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imgCreateJam"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_icon_profile"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_game"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/txtCreateJam"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="start|center"
                        android:lines="1"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/startJam"
                        android:textColor="@color/black"
                        app:autoSizeMaxTextSize="@dimen/_10ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imgCreateJam"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constDetailsAndEdit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constCreateJam">


                    <ImageView
                        android:id="@+id/imgDetailsAndEdit"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/border_icon_profile"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_edit_blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/txtDetailsAndEdit"
                        style="@style/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="start|center"
                        android:lines="1"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="@string/detailsAndEdit"
                        android:textColor="@color/blue"
                        app:autoSizeMaxTextSize="@dimen/_10ssp"
                        app:autoSizeMinTextSize="@dimen/_3ssp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imgDetailsAndEdit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->
        <View
            android:id="@+id/imgDotsFake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="@drawable/ripple_null"
            app:layout_constraintHeight_percent=".25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".12" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>